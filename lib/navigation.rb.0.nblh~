
module Navigation

  def self.raw_move(player, room)
    if player.location
      player.location.contents.delete(player)
    end

    player.location = room
    room.contents << player

    true
  end

  def self.move player, exitAlias
    theExit = player.location.exits.find { |i| i.alias == exitAlias }
    raw_move(:player, theExit.toRoom) if theExit
  end

end
